<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.continente.review"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainMenuActivity"
            android:label="@string/title_activity_main_menu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DevelopmentTools"
            android:label="@string/title_activity_development_tools" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pt.continente.review.MainMenuActivity" />
        </activity>
        <activity android:name=".common.ArticleActivity" />
        <activity android:name=".common.ReviewActivity" />
        <activity
            android:name=".ReviewsListActivity"
            android:label="@string/title_activity_review_list" >
        </activity>
        <activity
            android:name=".getpictures.PhotosManagementActivity"
            android:label="@string/title_activity_photos_management" >
        </activity>
        <activity
            android:name=".getpictures.FullImageActivity"
            android:label="@string/title_activity_full_image" >
        </activity>
	</application>
</manifest>