<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/topIcon"
            android:layout_width="63dp"
            android:layout_height="fill_parent"
            android:minHeight="60dp"
            android:layout_marginLeft="4dp"
            android:contentDescription="@string/iconDesc"
            android:src="@drawable/main_logo" />

        <TextView
            android:id="@+id/topText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/topTextString"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="28dp" />

    </LinearLayout>



<!-- 
reviewHistoryButton
searchProductButton
insertEANButton
startScannerButton
  

-->
    <Button
        android:id="@+id/reviewHistoryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="reviewHistory"
        android:text="@+string/reviewHistoryLabel" />
    <Button
        android:id="@+id/searchProductButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="searchProduct"
        android:text="@+string/searchProductLabel" />

    <Button
        android:id="@+id/insertEANButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="80dip"
        android:onClick="insertEAN"
        android:text="@+string/insertEANLabel" />

    <Button
        android:id="@+id/startScannerButton"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom"
        android:onClick="startScanner"
        android:text="@+string/startScannerLabel"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>